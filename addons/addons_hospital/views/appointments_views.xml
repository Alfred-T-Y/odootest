<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="menu_appointments_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments hms">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="date_appointment" optional="show"/>
                <field name="note" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="menu_appointments_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment hms">
                <div>
                    <header style="margin-left: 15px; margin-top: 10px">
                        <button name="action_confirm" type="object" string="Confirm" 
                        attrs="{'invisible': [('state', '!=', 'draft')]}" class="oe_highlight"/>
                        <button name="action_ongoing" type="object" string="Ongoing" 
                        attrs="{'invisible': [('state', '!=', 'confirmed')]}" class="oe_highlight"/>
                        <button name="action_done" type="object" string="Done" 
                        attrs="{'invisible': [('state', '!=', 'ongoing')]}" class="oe_highlight"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                        attrs="{'invisible': [('state', '=', 'done')]}"/>

                        <button name="print_report_pdf" type="object" string="Print PDF" 
                        class="oe_highlight"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                    </header>
                    <sheet>
                        <div>
                            <h1>Reference : <field name="reference" readonly="True"/></h1>
                            <div class="row mt-5">
                                <div class="col-6">
                                    <group>
                                        <field name="patient_id"/>
                                        <field name="date_appointment"/>
                                    </group>
                                </div>
                                <div class="col-6">
                                    <group>
                                        <field name="note"/>
                                    </group>
                                </div>
                            </div>
                        </div>
                        <notebook>
                            <page name="appointment_line_ids" string="Lines">
                                <field name="appointment_line_ids" class="mt-5">
                                    <tree editable="top">
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="other_infos" string="Infos">
                                
                            </page>
                        </notebook>
                    </sheet>
                    <sheet class="mt-5">
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hms_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('menu_appointments_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('menu_appointments_form')})
        ]"/>
        <field name="help" type="html">
            <p>Create a new appointment</p>
        </field>
    </record>
    
</odoo>
