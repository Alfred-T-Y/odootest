<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="menu_appointments_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments hms">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="date_appointment" optional="show"/>
                <field name="note" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="menu_appointments_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment hms">
                <div>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="reference" readonly="True"/>
                                    <field name="patient_id"/>
                                    <field name="date_appointment"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="note"/>
                                </group>
                            </div>
                        </div>
                    </sheet>
                    <sheet class="mt-5">
                        <div class="chatter_container">
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hms_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('menu_appointments_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('menu_appointments_form')})
        ]"/>
        <field name="help" type="html">
            <p>Create a new patient</p>
        </field>
    </record>
    
</odoo>
