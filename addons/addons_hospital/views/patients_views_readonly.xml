<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="hms_patient_list_readonly" model="ir.ui.view">
        <field name="name">hospital.patient.list.readonly</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients hms" create="0" delete="0" edit="0">
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="hms_patient_form_readonly" model="ir.ui.view">
        <field name="name">hospital.patient.form.readonly</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients hms" create="0" delete="0" edit="0">
                <div class="col-12">
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="name"/>
                                    <field name="date_of_birth"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="gender"/>
                                </group>
                            </div>
                        </div>
                    </sheet>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hms_patients_readonly" model="ir.actions.act_window">
        <field name="name">Patients readonly</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('hms_patient_list_readonly')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hms_patient_form_readonly')})
        ]"/>
        <field name="help" type="html">
            <p>See patients</p>
        </field>
    </record>
    
</odoo>