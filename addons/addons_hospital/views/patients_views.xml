<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="hms_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients hms">
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="hms_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients hms">
                <div>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="name"/>
                                    <field name="date_of_birth"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="gender"/>
                                </group>
                            </div>
                        </div>
                    </sheet>
                    <sheet class="mt-5">
                        <div class="chatter_container">
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hms_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('hms_patient_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hms_patient_form')})
        ]"/>
        <field name="help" type="html">
            <p>Create a new patients</p>
        </field>
    </record>
    
</odoo>