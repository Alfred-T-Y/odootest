<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="template_appointment_pdf">
        <t t-call="web.html_container">
            <t t-foreach="data" t-as="d">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <h1>Appointment Report</h1>
                        <br/>
                        <p class="h2"><strong>Reference : </strong><text class="text-muted" t-field="d['doc'].reference"/></p> 
                        <br/>
                        <br/>
                        <table class="table table-borderless">
                            <thead>
                                <tr style="font-size: 1.5rem;">
                                    <th class="text-start">Product</th>
                                    <th class="text-start">Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-if="not d['doc'].appointment_line_ids" class="pt-3 fs-5">
                                    <td colspan="2" class="text-muted text-center">Aucun produit</td>
                                </tr>
                                <tr t-foreach="d['doc'].appointment_line_ids" t-as="line" class="pt-3 fs-5">
                                    <td class="pl-8 text-start"><span t-field="line.product_id"/></td>
                                    <td class="text-start"><span t-field="line.qty"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <p class="fs-5">Liste des tags : 
                            <t t-foreach="d['tag']" t-as="tag">
                                <span t-field="tag.name"/>, 
                            </t>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
