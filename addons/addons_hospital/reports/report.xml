<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <data>
    
        <record id="report_appointment_xls" model="ir.actions.report">
            <field name="name">report_appointment_xls</field>
            <field name="model">hospital.appointment</field>
            <field name="print_report_name">'Rapport appointment_%s' % (object.reference)</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">addons_hospital.report_appointment_xls</field>
            <field name="binding_model_id" ref="model_hospital_appointment"/>
            <field name="binding_type">report</field>
            <field name="attachment_use" eval="False"/>
        </record>
            
        <record id="report_appointment_pdf" model="ir.actions.report">
            <field name="name">report_appointment_pdf</field>
            <field name="model">hospital.appointment</field>
            <field name="print_report_name">'Rapport appointment_%s' % (object.reference)</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">addons_hospital.template_appointment_pdf</field>
            <field name="binding_model_id" ref="model_hospital_appointment"/>
            <field name="binding_type">report</field>
            <field name="attachment_use" eval="False"/>
        </record>
    
    </data>
    
</odoo>